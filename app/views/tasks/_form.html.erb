<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id ="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :title, {class: "form-label font-weight-bold"}  %>
  <%= f.text_field :title, {class: "form-control mb-2"} %>
  <%= f.label :details, {class: "form-label font-weight-bold"} %>
  <%= f.text_field :details, {class: "form-control mb-2"} %>
  <% if @task.new_record? == false %>
    <%= f.label :completed, {class: "form-check-label font-weight-bold"} %>
    <%= f.check_box :completed, {class: "form-check-input mb-2"} %>
  <% end %>
  <%= f.submit "Add task", class: "btn btn-primary mt-2 form-control" %>
<% end %>
