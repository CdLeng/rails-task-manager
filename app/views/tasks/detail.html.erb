<div class="row m-2 ms-5 col-6">
  <div class="top d-inline-flex align-items-center">
    <h2><%= @task.title  %></h2>
    <div class="edit"><%= link_to 'Edit task', edit_task_path %></div>
    <div class="remove"><%= link_to 'Remove task', remove_task_path(@task), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></div>
  </div>
    <div class="details my-2">
      <p><%= @task.details %></p>
    </div>
    <ul class="my-2">
    <% if @task.completed == true %>
      <li class="d-flex align-items-center">
        <i class="fa-regular fa-square-check me-2"></i>
        <p class="m-0">Task is completed</p>
      </li>
    <% else  %>
      <li class="d-flex align-items-center">
        <i class="fa-regular fa-square me-2"></i>
        <p class="m-0">Task is uncompleted</p>
      </li>
    <% end  %>
    </ul>
    <div class="back my-3"><%= link_to 'Back to list', tasks_path %></div>
</div>
